{
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/recipes",
      "destination": "/recipes.html"
    },
    {
      "source": "/about",
      "destination": "/about.html"
    },
    {
      "source": "/contact",
      "destination": "/contact.html"
    },
    {
      "source": "/recipe",
      "destination": "/recipe.html"
    },
    {
      "source": "/recipe/:id",
      "destination": "/recipe.html"
    }
  ],
  "redirects": [
    {
      "source": "/recipes/",
      "destination": "/recipes",
      "permanent": true
    },
    {
      "source": "/about/",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/contact/",
      "destination": "/contact",
      "permanent": true
    },
    {
      "source": "/recipe/",
      "destination": "/recipe",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

